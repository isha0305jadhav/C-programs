//using bit wise operation
#include <stdio.h>

int main() {
    int number;

    
    printf("Enter a number: ");
    scanf("%d", &number);

    
    if (number == 0) {
        printf("The number is zero.\n");
    } else {
       
        int sign = number >> 31; 
        if (sign & 1) { 
            printf("The number is negative.\n");
        } else {
            printf("The number is positive.\n");
        }
    }

    return 0;
}
