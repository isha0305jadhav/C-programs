#include <stdio.h>
#include <string.h>
int sum(int num)
{
    int digit=0;
    int sum=0;
    while(num>0)
    {
        digit=num%10;
        sum=sum+digit;
        num=num/10;
        
    }
    return sum;
    
}
int main()
{
    int num;
    printf("Enter a number:");
    scanf("%d",&num);
    printf("\n sum of digits: %d",sum(num));
    return 0;
}
