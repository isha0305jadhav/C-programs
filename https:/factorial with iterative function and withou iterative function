long long fact(int num)
{
    if(num<0)
    {
         return -1;
    }
   
    if(num==0||num==1)
    {
        return 1;
    }
    
    return num*fact(num-1);
}
int main()
{
    int num;
    printf("Enter a number: ");
    scanf("%d", &num);

    long long result = fact(num);

    if (result == -1) {
        printf("Factorial not defined for negative numbers.\n");
    } else {
        printf("Factorial of %d = %lld\n", num, result);
    }

    return 0;
}
