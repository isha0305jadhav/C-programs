#include <stdio.h>
int max(int a[],int n)
{
    int max=a[0];
    for(int i=1;i<n;i++)
    {
        if(a[i]>max)
        {
            max=a[i];
        }
        
    }
    return max;
}
int main()
{
    int n;
    int result;
    printf("Enter elements in array:");
    scanf("%d",&n);
    int a[n];
    printf("Enter %d elements in array:",n);
    for(int i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    result=max(a,n);
    printf("Largest number in given array is: %d",result);
    return 0;
}
