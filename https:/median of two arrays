#include <stdio.h>

double median(int* nums1, int m, int* nums2, int n) {
    int total = m + n;
    int i = 0, j = 0;
    int prev = 0;
    int curnt = 0;

    for (int k = 0; k <= total / 2; k++) {
        prev = curnt;
        
        if (i < m && (j >= n || nums1[i] < nums2[j])) {
            curnt = nums1[i++];
        } else {
            curnt = nums2[j++];
        }
    }

    if (total % 2 == 0) {
        return (prev + curnt) / 2.0;
    } else {
        return curnt;
    }
}

int main() {
    int nums1[] = {1, 3};
    int nums2[] = {2};
    printf("Median: %.5f\n", median(nums1, 2, nums2, 1));

    int nums3[] = {1, 2};
    int nums4[] = {3, 4};
    printf("Median: %.5f\n", median(nums3, 2, nums4, 2));

    return 0;
}
