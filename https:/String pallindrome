#include <stdio.h>
int is_pallindrome(char str[])
{
    int len=0;
    while(str[len]!='\0')
    {
        len++;
    }
    for(int i=0;i<len/2;i++)
    {
        if(str[i]==str[len-1-i])
        {
            return 1;
        }
        else
        {
            return 0;
        }
    }
}
int main()
{
    char str[100];
    int result;
    printf("Enter a string to check:");
    scanf("%s",str);
    result=is_pallindrome(str);
    if(result)
    {
        printf("Given strig is pallindrome");
    }
    else
    {
        printf("Given string is not a pallindrome");
    }
    return 0;
}
