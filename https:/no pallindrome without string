#include <stdio.h>
int is_pallindrome(int num)
{
    int org= num;
    int rev=0;
    while(num>0)
    {
        int temp=num%10;
        rev=rev*10+temp;
        num=num/10;
    }
    if(org==rev)
    {
        return 1;
    }
    else
     return 0;
}

int main()
{
    int num;
    printf("Enter a number:");
    scanf("%d", &num);
    if(is_pallindrome(num))
    {
        printf("Given number is pallindrome");
    }
    else
    {
        printf("given number is not a pallindrome");
    }

    return 0;
}
