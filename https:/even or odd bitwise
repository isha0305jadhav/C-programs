#include <stdio.h>

int main()
{
    int num;
    char result;
    printf("Enter a number:");
    scanf("%d",&num);
    result=num&1;
    if(result)
    {
        printf("\n Given number %d is odd",num);
    }
    else{
        printf("\n Given number %d is even",num);
    }

    return 0;
}
