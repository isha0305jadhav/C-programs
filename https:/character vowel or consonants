#include <stdio.h>

int main()
{
    char ch;
    int v=0, c=0;
    printf("Enter a character:");
    scanf("%c", &ch);
    if((ch >='A'&&ch <='Z')||(ch >='a'&& ch <='z'))
    {
        if(ch=='a'|| ch=='A'||ch=='e'||ch=='E'||ch=='i'||ch=='I'||ch=='o'||ch=='O'||ch=='u'||ch=='U')
        {
            v=1;
        }
        else
        {
            c=1;
        }
    }
    if(v)
    {
        printf("Given character is vowel");
    }
    else if(c)
    {
        printf("Given character is consonant");
    }
    return 0;
}
