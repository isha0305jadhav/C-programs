#include <stdio.h>

int main()
{
    int num;
    int rev=0;
    printf("Enter a number:");
    scanf("%d",&num);
   while (num > 0) {
        int digit = num % 10;        
        rev = rev * 10 + digit;       
        num /= 10;                    
    }
    printf("result:=%d",rev);

    return 0;
}
