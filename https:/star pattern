#include <stdio.h>

void printTriangle(int n) {
    for (int i = 1; i <= n; i++) {
        
        
         for (int star = 1; star <= i; star++) {
            printf("*");
        }
        for (int s = 1; s <= n - i; s++) {
            printf(" ");
        }
    
       
        printf("\n");
    }
}

int main() {
    int n;
    printf("Enter the number of rows: ");
    scanf("%d", &n);

    printTriangle(n);

    return 0;
}
